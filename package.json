{
  "name": "jenv-zgw-portal-frontend",
  "private": true,
  "version": "1.0.0",
  "author": "Gemeente Rotterdam",
  "license": "EUPL-1.2",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "vite --port 3000 --mode development",
    "build": "tsc && vite build",
    "preinstall": "npx only-allow pnpm",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "generate-pwa-assets": "pwa-asset-generator ./src/assets/pwa-logo.svg ./public/pwa -f -w -o false -e true -i ./public/index.html -m ./public/manifest.json -a \"%PUBLIC_URL%\"",
    "lint": "eslint \"./**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"./**/*.{js,jsx,ts,tsx}\" --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@gemeente-denhaag/design-tokens-components": "2.1.0",
    "@gemeente-denhaag/icons": "2.1.0",
    "@gemeente-denhaag/link": "2.0.0",
    "@gemeente-denhaag/typography": "2.0.1",
    "@nl-portal/nl-portal-api": "1.5.0",
    "@nl-portal/nl-portal-authentication": "1.5.0",
    "@nl-portal/nl-portal-localization": "1.5.0",
    "@nl-portal/nl-portal-user-interface": "1.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vitest": "^2.0.4",
    "wait-on": "^7.2.0"
  }
}
